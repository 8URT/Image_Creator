# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database
DATABASE_URL=sqlite:///image_creator.db

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
# Restrict Google OAuth to existing users only (set to True to allow automatic user creation)
GOOGLE_OAUTH_ALLOW_NEW_USERS=False
# Restrict Google OAuth to specific email domains (comma-separated, e.g., "example.com,company.com")
# Leave empty to allow all domains (subject to GOOGLE_OAUTH_ALLOW_NEW_USERS setting)
GOOGLE_ALLOWED_DOMAINS=

# Session Security (set to True in production with HTTPS)
SESSION_COOKIE_SECURE=False

# Fallback Password Protection
FALLBACK_PASSWORD_HASH=6373f7e8a5733aa1b875ec0e46235b67b018e8fe239e47bc35d6d9b792cc3b2c
FALLBACK_PASSWORD_ENABLED=True

# Application Settings
BASE_URL=http://localhost:5000
ADMIN_EMAIL=admin@example.com
